<i class="icon-tools active" data-content="general_options" >{{! <span>General</span> }}</i>
<i class="icon-background" data-content="theme_options" >{{! <span>Theme</span> }}</i>
<div>
  <section id="general_options" class="show">
    <div>
      <h1>Style</h1>
      <div class="checkbox">
        <input id="{{darkFont.name}}" type="checkbox" name="{{darkFont.name}}" value="{{darkFont.name}}" {{#if darkFont.value}} checked="checked" {{/if}} />
        <label for="{{darkFont.name}}" class="icon-check">use dark font color</label>
      </div>

      <div class="checkbox">
        <input id="{{grayApps.name}}" type="checkbox" name="{{grayApps.name}}" value="{{grayApps.name}}" {{#if grayApps.value}} checked="checked" {{/if}} />
        <label for="{{grayApps.name}}" class="icon-check">use grayscaled app icons</label> 
      </div>
      <h1>Clock format</h1>
      <div class="checkbox">
        <input id="{{twelveHourClock.name}}" type="checkbox" name="{{twelveHourClock.name}}" value="{{twelveHourClock.name}}" {{#if twelveHourClock.value}} checked="checked" {{/if}} />
        <label for="{{twelveHourClock.name}}" class="icon-check">use 12h clock format</label> 
      </div>
    </div>
    <div>
      <h1>Mail</h1>
      <div class="mail_label">
        <form>
          <label for="{{label.name}}">Add a google label to check for new mails. </label>
          <input id="{{label.name}}" name="{{label.name}}" value="{{label.value}}" type="text" />
          <input type="submit" value="Save" />
          <small>Clear it, to use the inbox.</small>
        </form>
      </div>
    </div>    
  </section>
  <section id="theme_options" class="">
    {{#each themes}}
      <div class="capture">
        <input id="{{@key}}" type="radio" name="{{../theme}}" value="{{@key}}" {{#if this.value}} checked="checked" {{/if}} />
        <label for="{{@key}}" class="icon-check">
          <div class="img {{this.class}}" alt="theme_preview_{{this.name}}" />
          <div class="info"><strong>{{this.name}}</strong></div>
        </label> 
      </div>
    {{/each}}
  </section>
</div>
